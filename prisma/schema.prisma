model Job {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  userId          String 
  company         String
  logo            String
  logoBackground  String
  position        String
  postedAt        DateTime @default(now())
  contract        String
  location        String
  website         String
  apply           String
  description     String
  requirements    Requirements[]
  role            Role[]
  

}

model Requirements {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  content String
  items   String[]
  job       Job      @relation(fields: [jobId], references: [id])
  jobId    String @db.ObjectId
  
  
}



model Role {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  content String
  items   String[]
  job       Job      @relation(fields: [jobId], references: [id])
  jobId    String @db.ObjectId
 
}



