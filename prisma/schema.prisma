// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "mongodb"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  userId String   @unique 
  email   String   @unique
  name    String?
  job     Job[]

}


model Job {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  company         String
  logo            String
  logoBackground  String
  position        String
  postedAt        String?
  contract        String
  location        String
  website         String
  apply           String
  description     String
  requirements    Requirements?
  role            Role?
  user            User      @relation(fields: [id], references: [id])
}


model Requirements {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  items   String[]
  content String
  job     Job     @relation(fields: [id], references: [id])
}

model Role {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  content String
  items  String[]
  job     Job     @relation(fields: [id], references: [id])
  
}
